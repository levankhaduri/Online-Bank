@model PopUpWindowViewModel
    <div id="myModal" class="modal">

        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to reject this request ?
                </div>
                <div class="modal-footer">
                    <a type="button" class="ui inverted secondary button myCloseBtn">Cancel</a>
                    <a type="button" class="ui inverted red button approve__btn" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName">Reject</a>
                </div>
            </div>
        </div>

    </div>
<script>
    // Get the modal
    const modal = document.querySelector('#myModal');

    let currentId = 0;

    // Get the button that opens the modal
    const btns = document.querySelectorAll('.myBtn');
    const closeBtns = document.querySelectorAll('.myCloseBtn');
    const approveBtn = document.querySelector('.approve__btn');
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    var x = document.getElementsByClassName("myCloseBtn")[0];

    // When the user clicks the button, open the modal
    btns.forEach(btn => {
        btn.onclick = function () {
            modal.style.display = "block";
            currentId = this.getAttribute('data-id');
        }
    });


    approveBtn.addEventListener('click', function (e) {
        e.preventDefault();
        const hrefToGo = `${this.getAttribute('href')}/${currentId}`;
        window.location.href = hrefToGo;
    });

    closeBtns.forEach(btn => {
        btn.onclick = function () {
            modal.style.display = "none";
        }
    });

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>
<style>
    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        /*padding-top: 100px;*/ /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 450px!important;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
</style>