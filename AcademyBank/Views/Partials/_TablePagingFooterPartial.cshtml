@model AcademyBank.Web.Models.TablePagingModel

<div class="footer-line" style="width:100%; display:flex; justify-content:flex-end;">
	<div class="pagination">
		<a href="@Url.Action(Model.Action, Model.Controller, new { orderBy = Model.UrlParamOrdervalue, page = Model.CurrentPage-1 })"
		   style="@(Model.CurrentPage == 1? "pointer-events: none;" : "")">
			&laquo;
		</a>
		@for (int i = 1; i <= Model.PageCount; i++)
		{
			<a href="@Url.Action(Model.Action, Model.Controller, new { orderBy = Model.UrlParamOrdervalue, page = i })"
			   class="@(i == Model.CurrentPage?"active" : "")">
				@i
			</a>
		}
		<a href="@Url.Action(Model.Action, Model.Controller, new { orderBy = Model.UrlParamOrdervalue, page = Model.CurrentPage+1 })"
		   style="@(Model.CurrentPage == Model.PageCount? "pointer-events: none;" : "")">
			&raquo;
		</a>
	</div>
</div>