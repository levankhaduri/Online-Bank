@model AcademyBank.Models.AdminStatistics
@{
	Layout = "_LayoutAdminCp";
}


<div class="c-toolbar u-justify-center u-mb-small">
	<div class="inside_toolbar">
		<div class="row">
			<div class="c-toolbar_inside_state">
				<h4 class="c-toolbar__state-number">@Model.RequestedLoans</h4>
				<span class="c-toolbar__state-title">Loan Requests</span>
			</div>
			<div class="vert_hr"></div>
			<div class="c-toolbar_inside_state">
				<h4 class="c-toolbar__state-number">@Model.RequestedDeposits</h4>
				<span class="c-toolbar__state-title">Deposit Requests</span>
			</div>
			<div class="vert_hr"></div>
			<div class="c-toolbar_inside_state">
				<h4 class="c-toolbar__state-number">@Model.RequestedCards</h4>
				<span class="c-toolbar__state-title">Card Requests</span>
			</div>
			<div class="vert_hr"></div>
			<div class="c-toolbar_inside_state">
				<h4 class="c-toolbar__state-number">@Model.ActiveUsersCount</h4>
				<span class="c-toolbar__state-title">Active Users</span>
			</div>
			<div class="vert_hr"> </div>
			<div class="c-toolbar_inside_state">
				<h4 class="c-toolbar__state-number">@Model.BlockedUsersCount</h4>
				<span class="c-toolbar__state-title">Blocked Users</span>
			</div>
		</div>
	</div>
</div>

<div class="statistics_block">
	<div class="top_user_container">
		<div class="top_user_container_header">
			<h4 class="sttist_header_title">Loans statistics</h4>
		</div>

		<div class="statistic_continer_body">
			<canvas id="loansChart" class="chartjs" width="408" height="204"></canvas>
		</div>

		<div class="top_user_container_footer">
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.AcceptedLoans</h4>
				<span class="top_statistics_user_showname">Accepted</span>
				<div class="progress">
					<div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.RequestedLoans</h4>
				<span class="top_statistics_user_showname">Pending</span>
				<div class="progress">
					<div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.RejectedLoans</h4>
				<span class="top_statistics_user_showname">Rejected</span>
				<div class="progress">
					<div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
		</div>

	</div>




	<div class="top_user_container">
		<div class="top_user_container_header">
			<h4 class="sttist_header_title">Deposits statistics</h4>
		</div>

		<div class="statistic_continer_body">
			<canvas id="depositsChart" class="chartjs" width="408" height="204"></canvas>
		</div>

		<div class="top_user_container_footer">
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.AcceptedDeposits</h4>
				<span class="top_statistics_user_showname">Accepted</span>
				<div class="progress">
					<div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.RequestedDeposits</h4>
				<span class="top_statistics_user_showname">Pending</span>
				<div class="progress">
					<div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.RejectedDeposits</h4>
				<span class="top_statistics_user_showname">Rejected</span>
				<div class="progress">
					<div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
		</div>

	</div>
	




	<div class="top_user_container">
		<div class="top_user_container_header">
			<h4 class="sttist_header_title">Cards statistics</h4>
		</div>

		<div class="statistic_continer_body">
			<canvas id="cardsChart" class="chartjs" width="408" height="204"></canvas>
		</div>

		<div class="top_user_container_footer">
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.AcceptedCards</h4>
				<span class="top_statistics_user_showname">Accepted</span>
				<div class="progress">
					<div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.RequestedCards</h4>
				<span class="top_statistics_user_showname">Pending</span>
				<div class="progress">
					<div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div class="user_show_stats">
				<h4 class="top_statistics_num_value">@Model.RejectedCards</h4>
				<span class="top_statistics_user_showname">Rejected</span>
				<div class="progress">
					<div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
		</div>

	</div>


</div>


