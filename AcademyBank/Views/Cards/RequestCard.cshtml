@model AcademyBank.Models.Card

@{
    Layout = "_LayoutAuthenticated";
}

<h1>Card Request</h1>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestCard">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CardType" class="control-label"></label> <br />
                @Html.DropDownListFor(m => m.CardType, (ViewBag.CardTypes as SelectList))
                <span asp-validation-for="CardType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label> <br />
                <select name="AccountId" >
                    @foreach (Account account in ViewBag.Accounts)
                    {
                        <option value="@account.Id">
                            @account.AccountNumber
                        </option>
                    }
                </select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <select>
                <option value="value">text</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="AccountsAndCards">See cards</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}